<?cs if:(!?vdr.frontend || vdr.frontend != "disabled") ?>
start on ((filesystem
           and runlevel [!06]
           and started dbus
           and plymouth-ready)
          or runlevel PREVLEVEL=S)
stop on runlevel [!2345]

expect fork
respawn
env DISPLAY=:1
env XORGCONFIG=/etc/X11/xorg.conf.yavdr

script

if [ -e /etc/default/locale ]; then
. /etc/default/locale
fi

exec /usr/bin/x-daemon -nolisten tcp -noreset :1 vt7
end script
<?cs /if ?>

